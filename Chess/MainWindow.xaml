<Window x:Class="Chess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess"
        mc:Ignorable="d"
        Title="Sakklépések - Saját Név" Height="700" Width="520" ResizeMode="NoResize">
    <Grid x:Name="grid">
        <Image Source="/pieces/pawn_light.png" Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Image Margin="69,0,0,0" Source="/pieces/pawn_dark.png" Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Image Margin="138,0,0,0" Source="/pieces/rook_dark.png" Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Image Margin="216,0,0,0" Source="/pieces/knight_dark.png" Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Image Margin="294,0,0,0" Source="/pieces/bishop_dark.png" Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Image Margin="363,0,0,0" Source="/pieces/queen_dark.png" Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Image Margin="432,0,0,0" Source="/pieces/king_dark.png" Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label x:Name="tileLabel" Content="Kiválasztott mező:   " HorizontalAlignment="Left" Margin="10,584,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="lightPawnRB" Content="" HorizontalAlignment="Left" Margin="23,64,0,0" VerticalAlignment="Top" Click="OnRadioClick" IsChecked="True"/>
        <RadioButton x:Name="darkPawnRB" Content="" HorizontalAlignment="Left" Margin="95,64,0,0" VerticalAlignment="Top" Click="OnRadioClick"/>
        <RadioButton x:Name="rookRB" Content="" HorizontalAlignment="Left" Margin="163,64,0,0" VerticalAlignment="Top" Click="OnRadioClick"/>
        <RadioButton x:Name="knightRB" Content="" HorizontalAlignment="Left" Margin="245,64,0,0" VerticalAlignment="Top" Click="OnRadioClick"/>
        <RadioButton x:Name="bishopRB" Content="" HorizontalAlignment="Left" Margin="318,64,0,0" VerticalAlignment="Top" Click="OnRadioClick"/>
        <RadioButton x:Name="queenRB" Content="" HorizontalAlignment="Left" Margin="386,64,0,0" VerticalAlignment="Top" Click="OnRadioClick"/>
        <RadioButton x:Name="kingRB" Content="" HorizontalAlignment="Left" Margin="456,64,0,0" VerticalAlignment="Top" Click="OnRadioClick"/>
        <TextBlock x:Name="moveBox" HorizontalAlignment="Center" Margin="0,615,0,0" TextWrapping="Wrap" Text="Lehetséges lépések: " VerticalAlignment="Top" Height="59" Width="500"/>
    </Grid>
</Window>
